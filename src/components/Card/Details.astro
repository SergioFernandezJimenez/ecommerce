---
import ClockIcon from "@/icons/ClockIcon.astro";
import PeopleIcon from "@/icons/PeopleIcon.astro";
import StarIcon from "@/icons/StarIcon.astro";

interface Props {
  duration: { minimum: number; maximum: number };
  difficulty: number;
  people: { minimum: number; maximum: number };
}
const { duration, difficulty, people } = Astro.props;
---

<div class="container">
  <div class="detailCard durationCard">
    <ClockIcon stroke="#000" />
    {duration.minimum} / {duration.maximum}
  </div>

  <div class="detailCard peopleCard">
    <PeopleIcon stroke="#000" />
    {difficulty}
  </div>
  <div class="detailCard difficultyCard">
    <StarIcon stroke="#000" />
    {people.minimum} / {people.maximum}
  </div>
</div>

<style>
  .container {
    display: flex;
    gap: 0.5rem;
    justify-content: space-between;
  }
  .detailCard {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    justify-content: center;
    align-items: center;
    background: #d5d4f0;
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border-radius: 0.25rem;
    padding: 0.5rem;
    font-size: 0.8rem;
    text-align: center;
    width: 4rem;
    color: var(--text-dark);
    font-size: 0.75rem;
    font-weight: 500;
  }
</style>
